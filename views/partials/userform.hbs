<div class="row">
    <div class="col">
      <input type="text" class="form-control" value="{{this.first_name}}" placeholder="First name" name="first_name"/>
    </div>
    <div class="col">
      <input type="text" class="form-control" value="{{this.last_name}}" placeholder="Last name" name="last_name" />
    </div>
  </div>

  <div class="row pt-4">
    <div class="col">
      <input
        type="email"
        class="form-control"
        id="inputEmail4"
        value="{{this.email}}" 
        placeholder="Email"
        name="email"
      />
    </div>
    <div class="col">
      <input
      name="phone"
        class="form-control"
        value="{{this.phone}}" 
        placeholder="Phone Number"
        type="tel"
        pattern="[0-9]{10}"
        required
      />
    </div>
  </div>

  <div class="col pt-4">
    <div class="col">
        <label for="exampleFormControlTextarea1">Comments</label>
       <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="comments">{{this.comments}}</textarea>
    </div>
    <div class="col pt-4">
      <button type="submit" class="btn btn-primary">Add</button>
    </div>

  </div>